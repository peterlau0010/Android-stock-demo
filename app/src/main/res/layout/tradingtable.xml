<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#488AC7" >
    
    <TextView 
        android:text="Trading Record"
        android:textSize="30dp"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:textStyle="bold" 
    	android:textColor="#2A185A"    	
        ></TextView>
    <HorizontalScrollView
		 android:layout_width="wrap_content"
   			android:layout_height="wrap_content">
    <TableLayout android:layout_width="match_parent"
    	android:layout_height="match_parent"    	
    	android:orientation="horizontal"
    	android:stretchColumns="4"
    	>
    <TableRow android:layout_margin="dp"
        android:background="#9F08B7">
        
      <TextView android:text="TID "
          android:gravity="center"
   		/>  
    <TextView android:text="Date "
        android:gravity="center"
   		/>
    <TextView android:text="Time "
        android:gravity="center"
   		/>
    <TextView android:text="SCode "
        android:gravity="center"
   		/>
    <TextView android:text="SName "
        android:gravity="center"
   		/>
    <TextView android:text="QTY "
        android:gravity="center"
   		/>
    <TextView android:text="Price "
        android:gravity="center"
   		/>
    <TextView android:text="B/S "
        android:gravity="center"
   		/>
    </TableRow>
     
    <TableRow android:layout_margin="1dp"
        android:background="#5FE9FB">
        <TextView android:id="@+id/tvTID"
            android:gravity="center"
         />
        <TextView android:id="@+id/tvDate"
            android:gravity="center"
        />
        <TextView android:id="@+id/tvTime"
            android:gravity="center"
            />
        <TextView android:id="@+id/tvSCode"
            android:gravity="center"
            />
        <TextView android:id="@+id/tvSName"
            android:gravity="center"
          />
        <TextView android:id="@+id/tvQTY"
            android:gravity="center"
          />
        <TextView android:id="@+id/tvPrice"
            android:gravity="center"
          />
        <TextView android:id="@+id/tvBuySell"
            android:gravity="center"
          />
     </TableRow>
</TableLayout>
</HorizontalScrollView>
</LinearLayout>
